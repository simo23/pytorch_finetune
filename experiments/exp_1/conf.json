{

  "dataset": {
    "base_folder": "./data/sample_dataset/"
  },

  "general": {
    "num_workers": 8,
    "log_freq": 10
  },  

  "network": {
    "num_classes": 10,
    "past_ckpt": "",
    "p": 0.5,
    "arch": "resnet50",
    "trainable_scopes": ["all"]
  },

  "optimizer": {
    "type": "SGD",
    "train_batch_size": 8,
    "test_batch_size": 8,
    "clip": 0,
    "learning_rate": 1e-3,
    "nesterov": true,
    "type": "SGD",  
    "momentum": 0.9,
    "weight_decay": 1e-4,
    
    "schedule": {
      "type": "step",
      "mode": "epoch",
      "epochs": 500,
      "params": {
        "step_size": 100,
        "gamma": 0.1
      }
    }
  },

  "input": {
    "scale_and_random_crop_train": false,
    "smallest_side_scale_train": 256,
    "random_crop_train": 224,
    "randomresized_train": true,
    "randomresized_scale_train": [0.5,1.0],
    "randomresized_ratio_train": [0.75,1.333333333333333],
    "randomresized_crop_train": 224,  
    
    "color_jitter_train": true,
    "lighting_train": true,  

    "scale_and_center_crop_val" : false,
    "smallest_size_scale_val": 256,
    "center_crop_val": 224,
    "squared_image_val" : true,
    "squared_crop_val": 224,

    "mean": [0.485, 0.456, 0.406],
    "std": [0.229, 0.224, 0.225]
  }

}




